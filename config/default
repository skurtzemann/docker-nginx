server {
	listen 80;
	
	server_name _;
	root /data/www/$host;

	location / {
        try_files $uri $uri/ =404;
    }

	error_page 404 /404.html;

	location ~ \.php$ {
		try_files $uri =404;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_pass unix:/data/secure/php5-fpm.sock;
		fastcgi_split_path_info ^(.+\.php)(.*)$;
		include fastcgi_params;
	}
}